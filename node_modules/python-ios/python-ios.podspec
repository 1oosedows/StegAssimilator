Pod::Spec.new do |s|
  s.name             = 'python-ios'
  s.version          = '3.9.0'
  s.summary          = 'Python for iOS'
  s.description      = 'Python runtime for iOS'
  s.homepage         = 'https://github.com/python/python'
  s.license          = { :type => 'MIT', :file => 'LICENSE' }
  s.author           = { 'Python Software Foundation' => 'https://www.python.org' }
  s.source           = { :git => 'https://github.com/python/python.git', :tag => "v#{s.version}" }
  s.ios.deployment_target = '13.0'
  s.source_files = 'python/**/*'
  s.public_header_files = 'python/include/*.h'
  s.vendored_libraries = 'python/lib/libpython3.9.a'
  s.pod_target_xcconfig = {
    'HEADER_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/python-ios/python/include',
    'LIBRARY_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/python-ios/python/lib',
    'OTHER_LDFLAGS' => '$(inherited) -lpython3.9'
  }
end 