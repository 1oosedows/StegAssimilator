Pod::Spec.new do |s|
  s.name             = 'opencv-ios'
  s.version          = '4.5.0'
  s.summary          = 'OpenCV for iOS'
  s.description      = 'OpenCV library for iOS'
  s.homepage         = 'https://github.com/opencv/opencv'
  s.license          = { :type => 'MIT', :file => 'LICENSE' }
  s.author           = { 'OpenCV Team' => 'https://opencv.org' }
  s.source           = { :git => 'https://github.com/opencv/opencv.git', :tag => "#{s.version}" }
  s.ios.deployment_target = '13.0'
  s.source_files = 'opencv/**/*'
  s.public_header_files = 'opencv/include/*.h'
  s.vendored_libraries = 'opencv/lib/libopencv.a'
  s.pod_target_xcconfig = {
    'HEADER_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/opencv-ios/opencv/include',
    'LIBRARY_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/opencv-ios/opencv/lib',
    'OTHER_LDFLAGS' => '$(inherited) -lopencv'
  }
end 