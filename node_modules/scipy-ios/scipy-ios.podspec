Pod::Spec.new do |s|
  s.name             = 'scipy-ios'
  s.version          = '1.7.0'
  s.summary          = 'SciPy for iOS'
  s.description      = 'SciPy library for iOS'
  s.homepage         = 'https://github.com/scipy/scipy'
  s.license          = { :type => 'MIT', :file => 'LICENSE' }
  s.author           = { 'SciPy Developers' => 'https://scipy.org' }
  s.source           = { :git => 'https://github.com/scipy/scipy.git', :tag => "v#{s.version}" }
  s.ios.deployment_target = '13.0'
  s.source_files = 'scipy/**/*'
  s.public_header_files = 'scipy/include/*.h'
  s.vendored_libraries = 'scipy/lib/libscipy.a'
  s.dependency 'numpy-ios'
  s.pod_target_xcconfig = {
    'HEADER_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/scipy-ios/scipy/include',
    'LIBRARY_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/scipy-ios/scipy/lib',
    'OTHER_LDFLAGS' => '$(inherited) -lscipy'
  }
end 