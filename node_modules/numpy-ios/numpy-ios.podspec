Pod::Spec.new do |s|
  s.name             = 'numpy-ios'
  s.version          = '1.21.0'
  s.summary          = 'NumPy for iOS'
  s.description      = 'NumPy library for iOS'
  s.homepage         = 'https://github.com/numpy/numpy'
  s.license          = { :type => 'MIT', :file => 'LICENSE' }
  s.author           = { 'NumPy Developers' => 'https://numpy.org' }
  s.source           = { :git => 'https://github.com/numpy/numpy.git', :tag => "v#{s.version}" }
  s.ios.deployment_target = '13.0'
  s.source_files = 'numpy/**/*'
  s.public_header_files = 'numpy/include/*.h'
  s.vendored_libraries = 'numpy/lib/libnumpy.a'
  s.dependency 'python-ios'
  s.pod_target_xcconfig = {
    'HEADER_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/numpy-ios/numpy/include',
    'LIBRARY_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/numpy-ios/numpy/lib',
    'OTHER_LDFLAGS' => '$(inherited) -lnumpy'
  }
end 