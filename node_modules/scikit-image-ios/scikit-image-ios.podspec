Pod::Spec.new do |s|
  s.name             = 'scikit-image-ios'
  s.version          = '0.18.0'
  s.summary          = 'scikit-image for iOS'
  s.description      = 'scikit-image library for iOS'
  s.homepage         = 'https://github.com/scikit-image/scikit-image'
  s.license          = { :type => 'MIT', :file => 'LICENSE' }
  s.author           = { 'scikit-image Developers' => 'https://scikit-image.org' }
  s.source           = { :git => 'https://github.com/scikit-image/scikit-image.git', :tag => "v#{s.version}" }
  s.ios.deployment_target = '13.0'
  s.source_files = 'scikit-image/**/*'
  s.public_header_files = 'scikit-image/include/*.h'
  s.vendored_libraries = 'scikit-image/lib/libscikit-image.a'
  s.dependency 'numpy-ios'
  s.dependency 'scipy-ios'
  s.pod_target_xcconfig = {
    'HEADER_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/scikit-image-ios/scikit-image/include',
    'LIBRARY_SEARCH_PATHS' => '$(inherited) ${PODS_ROOT}/scikit-image-ios/scikit-image/lib',
    'OTHER_LDFLAGS' => '$(inherited) -lscikit-image'
  }
end 